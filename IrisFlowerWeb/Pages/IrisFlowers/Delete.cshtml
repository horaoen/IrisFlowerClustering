@page
@model IrisFlowerWeb.Pages.IrisFlowers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>你确定删除这条数据吗?</h3>
<div>
    <hr/>
    <div style="width: 400px; margin: 100px auto">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.IrisFlower.SepalLength)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.IrisFlower.SepalLength)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.IrisFlower.SepalWidth)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.IrisFlower.SepalWidth)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.IrisFlower.PetalLength)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.IrisFlower.PetalLength)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.IrisFlower.PetalWidth)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.IrisFlower.PetalWidth)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.IrisFlower.FlowerType)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.IrisFlower.FlowerType)
            </dd>
        </dl>
        <div style="width: 200px; margin: 0 auto;">
            <form method="post" style="display: inline">
                <input type="hidden" asp-for="IrisFlower.Id"/>
                <input type="submit" value="删除" class="btn btn-danger"/>
            </form>
            <a asp-page="./Index" class="btn btn-primary">取消</a>
        </div>
    </div>


</div>