@page
@model IrisFlowerWeb.Pages.IrisFlowers.EditModel

@{
    ViewData["Title"] = "编辑";
}

<hr/>
<div style="width: 400px; margin: 100px auto">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IrisFlower.Id"/>
        <div class="form-group">
            <label asp-for="IrisFlower.SepalLength" class="control-label"></label>
            <input asp-for="IrisFlower.SepalLength" class="form-control"/>
            <span asp-validation-for="IrisFlower.SepalLength" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IrisFlower.SepalWidth" class="control-label"></label>
            <input asp-for="IrisFlower.SepalWidth" class="form-control"/>
            <span asp-validation-for="IrisFlower.SepalWidth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IrisFlower.PetalLength" class="control-label"></label>
            <input asp-for="IrisFlower.PetalLength" class="form-control"/>
            <span asp-validation-for="IrisFlower.PetalLength" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IrisFlower.PetalWidth" class="control-label"></label>
            <input asp-for="IrisFlower.PetalWidth" class="form-control"/>
            <span asp-validation-for="IrisFlower.PetalWidth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IrisFlower.FlowerType" class="control-label"></label>
            <input asp-for="IrisFlower.FlowerType" class="form-control"/>
            <span asp-validation-for="IrisFlower.FlowerType" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-evenly mt-3">
            <input type="submit" value="保存" class="btn btn-primary"/>
            <a asp-page="./Index" class="btn btn-primary">返回</a>
        </div>

    </form>
</div>

<div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}